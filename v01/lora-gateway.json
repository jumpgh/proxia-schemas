{

	"$id": "https://sandbox.proxia.ru/schemas/v01/lora-gateway.json",
	"$schema": "http://json-schema.org/draft-07/schema#",

	"description": "LoRaWAN gateway",
	"type": "object",

	"required": [],

	"properties": {

		"desc": {
			"type": "string",
			"description": "gateway description"
		},

		"gpsalt": {
			"type": "number",
			"description": "gps altitude"
		},

		"gpspos": {
			"$ref": "https://sandbox.proxia.ru/schemas/v01/gps.json",
			"description": "gps position"
		},

		"lsnr": {
			"type": "number",
			"description": "luminance signal-to-noise ratio"
		},

		"mac": {
			"type": "string",
			"description": "base station MAC address"
		},

		"rssi": {
			"type": "number",
			"description": "received signal strength indication"
		},

		"time": {
			"type": "string",
			"description": "timestamp from gateway"
		}

	}

}