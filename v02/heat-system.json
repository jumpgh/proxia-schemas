{

	"$id": "https://sandbox.proxia.ru/schemas/v02/heat-system.json",
	"$schema": "http://json-schema.org/draft-07/schema#",

	"description": "heat system description",
	"allOf": [ {"$ref": "https://sandbox.proxia.ru/schemas/v02/port.json" } ],
	"type": "object",

	"required": [ "id", "number" ],

	"properties": {

		"id": {
			"type": "integer",
			"description": "heating system identifier"
		},

		"number": {
			"type": "integer",
			"description": "heat system identifier. Meter can have multiple inputs for multiple heat systems"
		},

		"name": {
			"type": "string",
			"description": "heat system name"
		},

		"enabled": {
			"type": "boolean",
			"description": "is in use the system?"
		},

		"archiveInfo": {
			"$ref": "https://sandbox.proxia.ru/schemas/v02/archive-info.json",
			"description": "info about stored archives"
		}
	}
}