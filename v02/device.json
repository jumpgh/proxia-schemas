{
	"$id": "https://sandbox.proxia.ru/schemas/v02/device.json",
	"$schema": "http://json-schema.org/draft-07/schema#",

	"description": "generic device description",
	"type": "object",

	"required": [ "devid", "address", "vendor", "model" ],

	"properties": {

		"devid": {
			"type": "string" ,
			"description": "device unique identifier"
		},

		"clientid": {
			"type": "string" ,
			"description": "client unique identifier"
		},

		"address": {
			"type": "string",
			"description": "hw device address details in address.md"
		},

		"vendor": {
			"type": "string",
			"description": "vendor name"
		},

		"model" : {
			"type": "string",
			"description": "vendor's model name"
		},

		"serial": {
			"type": "string",
			"description": "serial or factory number"
		},

		"name": {
			"type": "string",
			"description": "device name"
		},

		"ports": {
			"type": "array",
			"description": "ports available",
			"items": { "$ref": "https://sandbox.proxia.ru/schemas/v02/port.json" }
		}

	}
}