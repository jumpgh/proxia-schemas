
{
	"$id": "https://sandbox.proxia.ru/schemas/v02/extension-module.json",
	"$schema": "http://json-schema.org/draft-07/schema#",

	"description": "extension module metadata uspd >> extension module >> meter",
	"type": "object",
	"allOf": [ {"$ref": "https://sandbox.proxia.ru/schemas/v02/device.json" } ],

	"required": [],

	"properties": {

		"type": {
			"type": "integer",
			"description": "extension module type"
		},

		"address": {
			"type": "string",
			"description": "extension module net(bus) address"
		},

		"meters" : {
			"type": "array",
			"description": "connected meters",
			"items": {
				"$ref": "https://sandbox.proxia.ru/schemas/v02/meter.json"
			}
		}

	}
}