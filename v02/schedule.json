{
	"$id": "https://github.com/jumpgh/proxia-schemas/blob/master/v02/schedule.json",
	"$schema": "http://json-schema.org/draft-07/schema#",

	"description": "poll job schedule. Тут надо подумать, что потребуется: интервалы/окна опроса, периоды",
	"type": "object",

	"required": [ "id", "enabled" ],

	"properties": {

		"id": { "type": "string" },

		"enabled": { "type":"boolean" },
		
		"user": {
			"$ref": "https://github.com/jumpgh/proxia-schemas/blob/master/v02/schedule-user-data.json",
			"description": "schedule user data"
		},

		"cron": { 
			"type": "string",
			"description": "cron-style schedule * * * * * "
		}
	}
}
