{

	"$id": "https://github.com/jumpgh/proxia-schemas/blob/master/v02/meter.json",
	"$schema": "http://json-schema.org/draft-07/schema#",

	"description": "abstract meter",
	"type": "object",
	"allOf": [ {"$ref": "https://github.com/jumpgh/proxia-schemas/blob/master/v02/device.json" } ],

	"required": [ "type", "outputType" ],

	"properties" : {

		"type" : {
			"enum" : [ "electricity", "cold water", "hot water", "gas", 
						"heat", "measurer", "modbus", "lora", "generic" ],
			"description": "meter type"
		},

		"outputType": {
			"enum": [ "pulse", "digital" ],
			"description": "meter output type"
		},

		"ropassword": {
			"type": "string",
			"description": "RO password"
		},

		"rwpassword": {
			"type": "string",
			"description": "RW password"	
		},

		"pollStatus": {
			"enum": [ "enabled", "disabled", "maintance"],
			"description": "poll status enabled, manually disabled, disabled for maintance"
		},

		"dataStorePeriod": {
			"type": "number",
			"description": "data store period in seconds"
		},

		"schedule": {
			"type": "array",
			"description": "poll schedule",
			"items": { "$ref": "https://github.com/jumpgh/proxia-schemas/blob/master/v02/schedule.json" }
		},

		"registers": {
			"type": "array",
			"description": "modbus registers",
			"items": { "$ref": "https://github.com/jumpgh/proxia-schemas/blob/master/v02/modbus-register.json" }
		},

		"archiveInfo": {
			"$ref": "https://github.com/jumpgh/proxia-schemas/blob/master/v02/archive-info.json",
			"description": "info about stored archives"
		}
	}
}