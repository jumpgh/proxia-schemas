{
	"$id": "https://github.com/jumpgh/proxia-schemas/blob/master/v02/measurer-channel.json",
	"$schema": "http://json-schema.org/draft-07/schema#",

	"description": "measurer channel",
	"type": "object",
	
	"required": [ ],

	"properties" : {

		"number": {
			"type": "integer",
			"description": "channel number. Measurer can have multiple inputs or outputs"
		},

		"name": {
			"type": "string",
			"description": "channel name"
		},

		"enabled": {
			"type": "boolean",
			"description": "is in use the channel?"
		},
		
		"multiplier": {
			"type": "number",
			"description": "multiplier"
		},
		
		"io": {
			"enum": [ "input", "output" ],
			"description": "input or output"
		},

		"archiveInfo": {
			"$ref": "https://github.com/jumpgh/proxia-schemas/blob/master/v02/archive-info.json",
			"description": "info about stored archives"
		}
	}
}