{
	"$id": "https://sandbox.proxia.ru/schemas/v02/measurer-channel.json",
	"$schema": "http://json-schema.org/draft-07/schema#",

	"description": "measurer channel",
	"type": "object",
	
	"required": [ ],

	"properties" : {
	
		"id": {
			"type": "integer",
			"description": "measurer channel identifier"
		},

		"number": {
			"type": "integer",
			"description": "heat system identifier. Meter can have multiple inputs for multiple heat systems"
		},

		"name": {
			"type": "string",
			"description": "heat system name"
		},

		"enabled": {
			"type": "boolean",
			"description": "is in use the system?"
		},
		
		"multiplier": {
			"type": "number",
			"description": "multiplier"
		},
		
		"io": {
			"enum": [ "input", "output" ],
			"description": "input or output"
		}
	}
}